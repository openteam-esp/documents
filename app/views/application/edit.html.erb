<%= semantic_form_for resource, :url => resource_path, :validate => true do |form| %>
  <%= render :partial => 'fields', :locals => {:form => form} %>

  <%= form.buttons do %>
    <%= form.commit_button %>
    <%= button_to t('delete'), resource_path, :method => :delete %>
    <%= link_to t('cancel'), resource_path %>
  <% end %>
<% end %>

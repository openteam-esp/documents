<%= form.inputs do %>
  <%= form.input :kind, :collection => form.object.class.values_for_select_tag(:kind) %>
  <% collection = current_user.context_tree %>
  <% if (current_user.permissions.map(&:context).map(&:title) & ['Органы власти', 'Администрация Томской области']).any?
       collection = current_user.context_tree.map{ |context| context if context.title.scan(/администрация|губернатор|департамент/i).any? }.compact
  end %>
  <%= form.input :context, :collection => collection,
                             :member_label => ->(c) { ('&nbsp;' * 2 * c.depth + c.title).html_safe },
                             :include_blank => t('commons.not_selected') %>
  <%= form.input :number  %>
  <%= form.input :approved_on, :as => :date_picker, :format => "%d.%m.%Y" %>
  <%= form.input :title, :input_html => {:class => 'for_info_path'} %>
  <%= form.input :published_on, :as => :date_picker, :format => "%d.%m.%Y" %>
  <%= render :partial => 'manage/papers/category_checkboxes', :locals => { :form => form } %>
  <%= render :partial => 'manage/papers/attached_file', :locals => { :form => form } %>
<% end %>

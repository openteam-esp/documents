<%= render :partial => 'admin/papers/view', :locals => { :resource => resource } %>

<% if resource.state_actual? %>
  <%= semantic_form_for resource, :url => to_deflected_admin_project_path(resource) do |form| %>
    <%= form.inputs do %>
      <%= form.input :deflected_on, :as => :date_picker, :format => "%d.%m.%Y" %>
    <% end %>

    <%= form.buttons do %>
      <%= form.commit_button %>
    <% end %>
  <% end %>
<% end %>

<% if resource.state_deflected? %>
  <%= semantic_form_for resource, :url => to_actual_admin_project_path(resource) do |form| %>
    <%= form.buttons do %>
      <%= form.commit_button %>
    <% end %>
  <% end %>
<% end %>

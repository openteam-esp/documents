<h2><%= @subject %></h2>

<div class='description'>
  <%= @subject.description %>
</div>

<div class='published_on'>
  <%= t('published') %> <%= l @subject.published_on, :format => :long %>
</div>

<ul>
  <li><%= link_to t('cancels'), admin_document_cancels_path(@subject) %> </li>
  <li><%= link_to t('changes'), admin_document_changes_path(@subject) %> </li>
  <li><%= link_to t('assertations'), admin_document_assertations_path(@subject) %> </li>
</ul>

<%= semantic_search_form_for :paper, :url => admin_papers_path, :remote => true do |form| %>
  <%= form.inputs do %>
    <%= form.input :klass, :as => :hidden, :value => 'Document' %>
    <%= form.input :keywords, :as => :string %>
  <% end %>

  <%= form.buttons do %>
    <%= button_tag t('search'), :class => 'button icon search' %>
  <% end %>
<% end %>

<div class="search_result_block">
</div>

<ul>
  <% collection.each do |cancel| %>
    <li>
      <%= cancel.objekt %>
    </li>
  <% end %>
</ul>

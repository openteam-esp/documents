<div class='tabs button-group'>
  <%= link_to "#{t('canceled')} (#{resource.cancels.count})",
              [controller_namespace, resource, :cancels],
              :class => "button big icon remove #{is_active('cancel')}" %>

  <%= link_to "#{t('change')} (#{resource.changes.count})",
              [controller_namespace, resource, :changes],
              :class => "button big icon loop #{is_active('change')}" %>


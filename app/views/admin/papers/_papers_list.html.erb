<ul class='paper_list'>
  <% collection.each do |item| %>
    <li class=<%= cycle('odd', 'even') %>>
      <%= render item %>
      <% if @association %>
        <%= semantic_form_for @subject.send(@association.to_sym).build,
                              :url => eval("admin_document_#{@association}_path(@subject)"),
                              :html => { :class => 'add_form_button' } do |form| %>
          <%= form.inputs do %>
            <%= form.input :subject_id, :as => :hidden %>
            <%= form.input :objekt_id, :as => :hidden, :value => item.id %>
          <% end %>
          <%= form.buttons do %>
            <%= button_tag t('add'), :class => 'button icon add primary' %>
          <% end %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>



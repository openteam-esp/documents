<%= link_to t('back'), collection_path, :class => 'button icon arrowleft'%>
<%= link_to t('edit'), edit_resource_path(resource), :class => 'button icon edit' %>

<div class="document_show">
  <h2><%= resource.title %></h2>

  <div class='description'>
    <%= resource.description %>
  </div>

  <div class='published_on'>
    <%= t('published') %> <%= l resource.published_on, :format => :long %>
  </div>
</div>

<div class='tabs button-group'>
  <%= link_to t('cancel'), admin_document_cancels_path(resource), :class => "button big icon remove #{is_active('cancel')}" %>
  <%= link_to t('change'), admin_document_changes_path(resource), :class => "button big icon loop #{is_active('change')}" %>
  <%= link_to t('assertation'), admin_document_assertations_path(resource), :class => "button big icon log #{is_active('assertation')}" %>
</div>

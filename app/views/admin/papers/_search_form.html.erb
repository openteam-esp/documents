<%= semantic_search_form_for :paper, :url => admin_papers_path, :remote => true do |form| %>
  <%= form.inputs do %>
    <%= form.input :klass, :as => :hidden, :value => klass %>
    <%= form.input :keywords, :as => :string %>
    <li><%= hidden_field_tag :subject_id, subject.id %></li>
    <li><%= hidden_field_tag :association, association %></li>
  <% end %>

  <%= form.buttons do %>
    <%= button_tag t('search'), :class => 'button icon search' %>
  <% end %>
<% end %>

